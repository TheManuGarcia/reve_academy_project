<!DOCTYPE html>
<html ng-app="MainApp">
<head>
    <% include partials/head %>
    <script src="/javascripts/controllers/Observation.js" type="text/javascript"></script>
</head>
<body>
<header>
    <% include partials/admin_header %>
</header>
<% include partials/slideout_menu %>

<div class="container" ng-controller="ObservationController as observation">
    <main>
        <div class="row">
            <h4 class="col s12"><%= title %></h4>

        </div>
        <div class="row">
            <div class="col s3 offset-s1">
                <h5>Select Class</h5>

                <form>
                    <div ng-repeat="Class in observation.Classes track by $index">
                        <input class="with-gap" ng-model="observation.ClassID" type="radio" name="group1"
                               value="{{ Class.ClassID }}" id="{{ Class.ClassID }}"/>
                        <label for="{{Class.ClassID}}" ng-click="observation.selectClass(Class)">{{ Class.ClassName }}</label>
                    </div>
                </form>
            </div>


            <table class="striped col s4 offset-s1" ng-if="observation.classClicked">
                <th colspan="4">
                    {{ observation.classSelected }} Students
                </th>
                <tr ng-repeat="Student in observation.studentData track by $index">
                    <td>
                        {{Student.FirstName}} {{Student.LastName}}
                    </td>
                    <td>
                        <input id="{{'OnTarget' + Student.StudentID}}" class="with-gap" type="radio"
                               ng-model="Student.ObsValue" value="OnTarget" name="{{Student.StudentID}}">
                        <label for="{{'OnTarget' + Student.StudentID}}">On target</label>
                    </td>
                    <td>
                        <input id="{{'Enrichment' + Student.StudentID}}" class="with-gap" type="radio"
                               ng-model="Student.ObsValue" value="Enrichment" name="{{Student.StudentID}}">
                        <label for="{{'Enrichment' + Student.StudentID}}">Enrichment</label>
                    </td>
                    <td>
                        <input id="{{'Support' + Student.StudentID}}" class="with-gap" type="radio"
                               ng-model="Student.ObsValue" value="Support" name="{{Student.StudentID}}">
                        <label for="{{'Support' + Student.StudentID}}">Support</label>
                    </td>
                </tr>

            </table>

            <button class="right btn-small waves-effect waves-light btn deep-orange accent-4" id="observationButton"
                    ng-if="observation.classClicked" type="button" ng-click="observation.saveObs('<%= title %>')">SAVE
            </button>
            <span class="saved right" ng-if="observation.obsSaved">{{ observation.message }}</span>
        </div>

    </main>

</div>

</body>
</html>