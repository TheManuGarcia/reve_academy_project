<!DOCTYPE html>
<html ng-app="MainApp">
<head>
    <% include partials/head %>

    <script src="/javascripts/Chart.min.js" type="text/javascript"></script>
    <script src="/javascripts/moment.min.js"></script>
    <script src="/javascripts/controllers/ViewDataIntern.js" type="text/javascript"></script>

</head>
<body>

<% if (user.UserType == 0) { %>
<% include partials/admin_header %>
<% } else if (user.UserType == 1) { %>
<% include partials/teacher_header %>
<% } else  { %>
<% include partials/intern_header %>
<% } %>

<div class="container">
    <main class="noPadding" ng-controller="ViewDataInternController as viewdata">

        <div class="row">
            <div class="col s12">
                <button id="getDataInternBtn" class="btn waves-effect waves-light" type="submit"
                        ng-click="viewdata.getData()" name="getdata">
                    Get Data
                    <i class="material-icons right">view_list</i>
                </button>
            </div>
        </div>
        <div ng-if="viewdata.noData" class="row">
            <div class="logintext col s4 card-panel darken-4">No data found</div>
        </div>

        <div ng-show="viewdata.showCharts" ng-cloak>
            <ul id="charts"></ul>
            <ul id="tables">
                <li id="ChartLI5">
                    <div>

                        <h3 class="chartTitle">Equitable</h3>

                        <table class="chart1Table striped">
                            <th>
                                Observation Date
                            </th>
                            <th>
                                Observation Value
                            </th>
                        </table>
                    </div>
                </li>
                <li id="ChartLI6">
                    <div>
                        <h3>Engagement</h3>
                        <table class="chart2Table striped">
                            <th>
                                Observation Date
                            </th>
                            <th>
                                Observation Value
                            </th>
                        </table>
                    </div>
                </li>
                <li id="ChartLI7">
                    <div>
                        <h3>Supportive Learning</h3>
                        <table class="chart3Table striped">
                            <th>
                                Observation Date
                            </th>
                            <th>
                                Observation Value
                            </th>
                        </table>
                    </div>
                </li>
                <li id="ChartLI8">
                    <div>
                        <h3>Responsibility</h3>
                        <table class="chart4Table striped">
                            <th>
                                Observation Date
                            </th>
                            <th>
                                Observation Value
                            </th>
                        </table>
                    </div>
                </li>
            </ul>
        </div>
    </main>

</div>
</body>
</html>

