<!DOCTYPE html>
<html>
<head>
    <% include partials/head %>
</head>
<body>
<% include partials/header_main %>
<div class="container">
    <main class="noPadding">
        <div class="row">
            <div class="col s8">
                <h4>Please Log In</h4>
            </div>
        </div>

        <form action="/login" method="post" class="col s8">
            <div class="row">
                <div class="input-field col s8">
                    <input id="username" type="text" class="validate" name="Username" required>
                    <label for="username">Username</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s8">
                    <input id="password" type="password" class="validate" name="Password" required>
                    <label for="password">Password</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s8">

                    <button class="btn waves-effect waves-light" type="submit" name="action">Log In</button>
                </div>
            </div>
        </form>
        <% if (message.length > 0) { %>
        <div class="row">
            <div class="logintext col s4 card-panel  red darken-1"> <%= message %> </div>
            <% } %>
        </div>
    </main>

</div>
</body>
</html>