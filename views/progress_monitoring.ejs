<!DOCTYPE html>
<html ng-app="MainApp">
<head>
    <% include partials/head %>
    <script src="/javascripts/controllers/Observation.js" type="text/javascript"></script>
</head>
<body>
<header>
    <% include partials/admin_header %>
</header>
<% include partials/slideout_menu %>

<div class="container" ng-controller="ObservationController as observation">
    <main>
        <div class="row">
            <h4 class="col s12"><%= title %></h4>

        </div>
        <div class="row">
            <div class="col s3 offset-s1">
                <h5>Select Class</h5>

                <form>
                    <div ng-repeat="Class in observation.Classes track by $index">
                        <input class="with-gap" ng-model="observation.ClassID" type="radio" name="classGroup"
                               value="{{ Class.ClassID }}" id="{{ Class.ClassID }}"/>
                        <label for="{{Class.ClassID}}" ng-click="observation.selectClass(Class)">{{ Class.ClassName
                            }}</label>
                    </div>
                </form>
            </div>

            <div class="col m3 offset-m1 col s12" ng-if="observation.classClicked">
                <h5 class="studentList">{{ observation.classSelected }} Students</h5>

                <div ng-repeat="student in observation.studentData track by $index">

                    <input class="with-gap" ng-model="observation.StudentID" type="radio" name="studentGroup"
                           value="{{ student.StudentID }}" id="{{ student.StudentID }}"/>
                    <label for="{{ student.StudentID }}" ng-click="observation.selectStudent(student)">
                        {{ student.FirstName }} {{ student.LastName }}
                    </label>

                </div>
            </div>

            <table class="striped" ng-if="observation.studentClicked">
                <th colspan="3" ng-model="observation.studentSelected">
                    {{ observation.studentSelected.FirstName }} {{ observation.studentSelected.LastName }}
                </th>
                <tr>
                    <td>Communication</td>
                    <td>{{ observation.sliderCommunication }}</td>
                    <td class="range-field">
                        <input type="range" id="slider1" min="0" value="{{ observation.sliderCommunication }}" max="5" step="1" ng-model="observation.sliderCommunication">
                    </td>
                </tr>
                <tr>
                    <td>Enthusiasm</td>
                    <td>{{ observation.sliderEnthusiasm }}</td>
                    <td class="range-field">
                        <input type="range" id="slider2" min="0" value="{{ observation.sliderEnthusiasm }}" max="5" step="1" ng-model="observation.sliderEnthusiasm">
                    </td>
                </tr>
                <tr>
                    <td>Teamwork</td>
                    <td>{{ observation.sliderTeamwork }}</td>
                    <td class="range-field">
                        <input type="range" id="slider3" min="0" value="{{ observation.sliderTeamwork }}" max="5" step="1" ng-model="observation.sliderTeamwork">
                    </td>
                </tr>
                <tr>
                    <td>Problem Solving</td>
                    <td>{{ observation.sliderProblemSolving }}</td>
                    <td class="range-field">
                        <input type="range" id="slider4" min="0" value="{{ observation.sliderProblemSolving }}" max="5" step="1" ng-model="observation.sliderProblemSolving">
                    </td>
                </tr>
                <tr>
                    <td>Professionalism</td>
                    <td>{{ observation.sliderProfessionalism }}</td>
                    <td class="range-field">
                        <input type="range" id="slider5" min="0" value="{{ observation.sliderProfessionalism }}" max="5" step="1" ng-model="observation.sliderProfessionalism">
                    </td>
                </tr>
            </table>

        <button class="right btn-small waves-effect waves-light btn deep-orange accent-4" id="observationButton"
                ng-if="observation.classClicked" type="button" ng-click="observation.saveSliderObs()">SAVE
        </button>
        <span class="saved right" ng-if="observation.obsSaved">{{ observation.message }}</span>

</div>

</main>

</div>

</body>
</html>