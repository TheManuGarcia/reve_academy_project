<!DOCTYPE html>
<html ng-app="MainApp">
<head>
    <% include ../partials/head %>
    <script src="/javascripts/controllers/AddIntern.js" type="text/javascript"></script>
</head>
<body>
<% if (user.UserType == 0) { %>
<% include ../partials/admin_header %>
<% } else if(user.UserType == 1) { %>
<% include ../partials/teacher_header%>

<% } else  { %>
<% include ../partials/intern_header%>
<% } %>
<div class="container">
    <main ng-controller="AddInternController as intern" class="noPadding">
        <div class="row">
            <h4 class="col s12">Add An Intern</h4>

            <div class="addAnIntern">
                <div class="row">
                    <form class="col s12" method="post" ng-submit="intern.submit()">
                        <div class="input-field col s12">
                            <input id="first_name" type="text" class="validate" ng-model="intern.first_name">
                            <label for="first_name">First Name</label>
                        </div>
                        <div class="input-field col s12">
                            <select id="Internship" name="Internship" ng-model="intern.Internship">
                                <option value="" disabled selected>Choose Internship</option>
                                <option value="Rêve-Dev">Rêve Dev</option>
                                <option value="Rêve-Retail">Rêve Retail</option>
                            </select>
                            <label for="Internship">Choose Internship</label>
                        </div>

                        <div class="input-field col s4">
                            <input type="date" class="datepicker" name="startdate" ng-model="intern.date">
                            <label for="startdate">Start Date</label>
                        </div>
                        <div class="input-field col s4 offset-s8">
                            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

</div>
</body>
</html>