<!DOCTYPE html>
<html ng-app="MainApp">
<head>
    <% include ../partials/head %>

    <script src="/javascripts/Chart.min.js" type="text/javascript"></script>
    <script src="/javascripts/ReveChart.js" type="text/javascript"></script>
    <script src="/javascripts/controllers/ViewDataTeacher.js" type="text/javascript"></script>

</head>
<body>

<header>
    <% if (user.UserType == 0) { %>
    <% include ../partials/admin_header %>
    <% } else if(user.UserType == 1) { %>
    <% include ../partials/teacher_header %>

    <% } else  { %>
    <% include ../partials/intern_header %>
    <% } %>
</header>
<% include ../partials/slideout_menu %>
<div class="container">
    <main ng-controller="ViewDataTeacherController as viewdata">


        <ul id="teacherList" class="dropdown-content">
            <li ng-repeat="teacher in viewdata.teachers track by $index"><a
                        ng-click="viewdata.selectTeacher(teacher.UserID)" href="#!">{{ teacher.FirstName }} {{
                    teacher.LastName }} {{teacher.UserID }}</a></li>
        </ul>


        <ul id="classList" class="dropdown-content">
            <li ng-repeat="class in viewdata.classes track by $index"><a
                        ng-click="viewdata.selectClass(class.ClassID)" href="#!">{{ class.ClassName }}</a></li>
        </ul>


        <ul id="studentList" class="dropdown-content">
            <li ng-repeat="student in viewdata.students track by $index"><a href="#!">{{ student.FirstName }} {{
                    student.LastName }}</a></li>
        </ul>
        <div class="row">
            <div class="col s12">
                <a class="btn dropdown-button" id="selectTeacherBtn" href="#!" data-activates="teacherList">Select
                    Teacher<i
                            class="mdi-navigation-arrow-drop-down right"></i></a>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <a ng-show="viewdata.teacherSelected" class="btn dropdown-button" href="#!" data-activates="classList">Select
                    Class<i
                            class="mdi-navigation-arrow-drop-down right"></i></a>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <a ng-show="viewdata.classSelected" class="btn dropdown-button" href="#!" data-activates="studentList">Select
                    Student<i
                            class="mdi-navigation-arrow-drop-down right"></i></a>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <button id="getDatabtn" class="btn waves-effect waves-light" type="submit" name="getdata">Get Data
                    <i class="material-icons right">view_list</i>
                </button>
            </div>
        </div>

        <canvas id="mycanvas" width="256" height="256"></canvas>

    </main>

</div>
</body>
</html>