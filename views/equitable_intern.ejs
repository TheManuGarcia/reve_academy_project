<!DOCTYPE html>
<html ng-app="MainApp">
<head>
    <% include partials/head %>
    <script src="/javascripts/controllers/InternObservation.js" type="text/javascript"></script>
</head>
<body>
<header>
    <% include partials/admin_header %>
</header>
<% include partials/slideout_menu %>

<div class="container" ng-controller="InternObservationController as observation">
    <main>
        <div class="row">
            <h4 class="col s12"><%= title %></h4>

        </div>
        <div class="row">
            <table class="striped col s12 radioTable">
                <th colspan="4">
                    Interns
                </th>
                <tr ng-repeat="Intern in observation.internData track by $index">
                    <td>
                        {{Intern.FirstName}} {{Intern.LastName}}
                    </td>
                    <td>
                        <input id="{{'Participating' + Intern.InternID}}" class="with-gap" type="radio"
                               ng-model="Intern.ObsValue" value="Participating" name="{{Intern.InternID}}">
                        <label for="{{'Participating' + Intern.InternID}}">Participating</label>
                    </td>
                    <td>
                        <input id="{{'NotParticipating' + Intern.InternID}}" class="with-gap" type="radio"
                               ng-model="Intern.ObsValue" value="Not Participating" name="{{Intern.InternID}}">
                        <label for="{{'NotParticipating' + Intern.InternID}}">Not Participating</label>
                    </td>
                    <td>
                        <input id="{{'Dominating' + Intern.InternID}}" class="with-gap" type="radio"
                               ng-model="Intern.ObsValue" value="Dominating" name="{{Intern.InternID}}">
                        <label for="{{'Dominating' + Intern.InternID}}">Dominating</label>
                    </td>
                </tr>

            </table>

            <button class="right btn-small waves-effect waves-light btn" id="observationButton"
                    type="button" ng-click="observation.saveObs('<%= title %>')">SAVE
            </button>
            <span class="saved right" ng-if="observation.obsSaved">{{ observation.message }}</span>
        </div>

    </main>

</div>


</body>
</html>